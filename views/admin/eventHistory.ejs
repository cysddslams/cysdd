    <script>
        let isSidebarOpen = false;

        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            const body = document.body;
            
            if (isSidebarOpen) {
                sidebar.style.left = "-100%";
                body.classList.remove('sidebar-open');
            } else {
                sidebar.style.left = "0";
                body.classList.add('sidebar-open');
            }
            isSidebarOpen = !isSidebarOpen;
        }

        const teamDropdownBtn = document.querySelector('.team-dropdown-btn');
        const teamDropdownContent = document.querySelector('.team-dropdown-content');
        
        teamDropdownBtn.addEventListener('click', function() {
            teamDropdownBtn.classList.toggle('active');
            teamDropdownContent.style.display = teamDropdownContent.style.display === "block" ? "none" : "block";
        });

        function showLogoutModal() {
            document.getElementById('logoutModal').style.display = 'block';
        }
        
        function hideLogoutModal() {
            document.getElementById('logoutModal').style.display = 'none';
        }
        
        document.getElementById('confirmLogout').addEventListener('click', function() {
            window.location.href = '/admin/logout';
        });
        
        document.getElementById('cancelLogout').addEventListener('click', function() {
            hideLogoutModal();
        });

        document.addEventListener('DOMContentLoaded', function() {
            const profileContainer = document.getElementById('adminProfileContainer');
            const dropdownMenu = document.getElementById('adminDropdownMenu');
            
            if (profileContainer && dropdownMenu) {
                profileContainer.addEventListener('click', function(e) {
                    e.stopPropagation();
                    dropdownMenu.style.display = dropdownMenu.style.display === 'block' ? 'none' : 'block';
                });
            }
            
            document.querySelectorAll('[id^="leaderboardTabs-"]').forEach(tabsContainer => {
                const eventId = tabsContainer.id.split('-')[1];
                const tabs = tabsContainer.querySelectorAll('.leaderboard-tab');
                const contentContainer = document.getElementById(`leaderboardContent-${eventId}`);
                
                if (contentContainer) {
                    tabs.forEach(tab => {
                        tab.addEventListener('click', function() {
                            tabs.forEach(t => t.classList.remove('active'));
                            this.classList.add('active');
                            
                            contentContainer.querySelectorAll('.leaderboard-table-container').forEach(table => {
                                table.style.display = 'none';
                            });
                            
                            const sport = this.dataset.sport;
                            const targetTable = contentContainer.querySelector(`[data-sport="${sport}"]`);
                            if (targetTable) {
                                targetTable.style.display = 'block';
                            }
                        });
                    });
                }
            });
            
            document.querySelectorAll('.view-results-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const eventId = this.dataset.eventId;
                    loadEventResults(eventId);
                });
            });
            
            document.querySelectorAll('.view-leaderboard-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const eventId = this.dataset.eventId;
                    loadEventLeaderboard(eventId);
                });
            });
            
            document.querySelectorAll('.modal').forEach(modal => {
                modal.addEventListener('click', function(e) {
                    if (e.target === this) {
                        this.style.display = 'none';
                    }
                });
            });
        });

        async function loadEventResults(eventId) {
            try {
                const response = await fetch(`/admin/event-history/results/${eventId}`);
                const data = await response.json();
                
                if (data.error) {
                    alert(data.error);
                    return;
                }

                displayResultsModal(data);
            } catch (error) {
                console.error('Error loading event results:', error);
                alert('Error loading event results');
            }
        }

        async function loadEventLeaderboard(eventId) {
            try {
                const response = await fetch(`/admin/event-history/leaderboard/${eventId}`);
                const data = await response.json();
                
                if (data.error) {
                    alert(data.error);
                    return;
                }

                displayLeaderboardModal(data);
            } catch (error) {
                console.error('Error loading event leaderboard:', error);
                alert('Error loading event leaderboard');
            }
        }

        function displayResultsModal(data) {
            const modalTitle = document.getElementById('modalTitle');
            const modalContent = document.getElementById('modalContent');
            
            modalTitle.textContent = `Results - ${data.event.title}`;
            
            let html = `
                <div style="margin-bottom: 20px;">
                    <p><strong>Date:</strong> ${new Date(data.event.date_schedule).toLocaleDateString()}</p>
                    <p><strong>Location:</strong> ${data.event.location}</p>
                </div>
            `;

            if (data.brackets.length === 0) {
                html += '<p>No tournament brackets found for this event.</p>';
            } else {
                data.brackets.forEach(bracket => {
                    html += `
                        <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; margin-bottom: 15px;">
                            <h4 style="margin: 0 0 10px 0; color: #333;">${bracket.sport_type} (${bracket.bracket_type.replace('_', ' ')})</h4>
                            ${bracket.champion_name ? `
                                <p style="margin: 5px 0; color: #28a745; font-weight: 600;">
                                    <i class="fas fa-trophy"></i> Champion: ${bracket.champion_name}
                                </p>
                            ` : '<p style="margin: 5px 0; color: #666;">No champion determined</p>'}
                            <p style="margin: 5px 0; color: #666;">
                                Progress: ${bracket.completed_matches}/${bracket.total_matches} matches completed (${bracket.completionRate}%)
                            </p>
                            <p style="margin: 5px 0; color: #666;">Teams: ${bracket.totalTeams}</p>
                        </div>
                    `;
                });
            }

            modalContent.innerHTML = html;
            document.getElementById('resultsModal').style.display = 'block';
        }

        function displayLeaderboardModal(data) {
            const modalTitle = document.getElementById('leaderboardModalTitle');
            const modalContent = document.getElementById('leaderboardModalContent');
            
            modalTitle.textContent = `Leaderboard - ${data.event.title}`;
            
            let html = `
                <div style="margin-bottom: 20px;">
                    <p><strong>Date:</strong> ${new Date(data.event.date_schedule).toLocaleDateString()}</p>
                    <p><strong>Location:</strong> ${data.event.location}</p>
                </div>
                
                <div class="leaderboard-tabs" style="margin-bottom: 20px;">
                    <button class="leaderboard-tab active" data-sport="all">Over all</button>
            `;
            
            const sports = [...new Set(data.leaderboards.map(lb => lb.sport_type))];
            sports.forEach(sport => {
                html += `<button class="leaderboard-tab" data-sport="${sport}">${sport}</button>`;
            });
            
            html += `</div><div>`;
            
            html += `<div class="leaderboard-table-container" data-sport="all">`;
            html += generateLeaderboardTable(data.leaderboards, true);
            html += `</div>`;
            
            const sportsLeaderboards = {};
            data.leaderboards.forEach(lb => {
                if (!sportsLeaderboards[lb.sport_type]) {
                    sportsLeaderboards[lb.sport_type] = [];
                }
                sportsLeaderboards[lb.sport_type].push(lb);
            });
            
            Object.keys(sportsLeaderboards).forEach(sport => {
                html += `<div class="leaderboard-table-container" data-sport="${sport}" style="display: none;">`;
                html += generateLeaderboardTable(sportsLeaderboards[sport], false);
                html += `</div>`;
            });
            
            html += `</div>`;
            
            modalContent.innerHTML = html;
            
            const modalTabs = modalContent.querySelectorAll('.leaderboard-tab');
            modalTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    modalTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    const sport = this.dataset.sport;
                    modalContent.querySelectorAll('.leaderboard-table-container').forEach(table => {
                        table.style.display = 'none';
                    });
                    
                    const targetTable = modalContent.querySelector(`[data-sport="${sport}"]`);
                    if (targetTable) {
                        targetTable.style.display = 'block';
                    }
                });
            });
            
            document.getElementById('leaderboardModal').style.display = 'block';
        }

        function generateLeaderboardTable(leaderboardData, isAggregated) {
            let tableHtml = `<table class="leaderboard-table"><thead><tr>
                <th>Rank</th>
                <th>Team</th>
                <th>Org</th>
                <th>G</th>
                <th>S</th>
                <th>B</th>
                <th>Points</th>
                <th>Win Rate</th>
            </tr></thead><tbody>`;
            
            let processedData;
            if (isAggregated) {
                const teamStats = {};
                leaderboardData.forEach(lb => {
                    if (!teamStats[lb.team_id]) {
                        teamStats[lb.team_id] = {
                            team_id: lb.team_id,
                            team_name: lb.team_name,
                            team_profile: lb.team_profile,
                            organization: lb.organization,
                            gold: 0,
                            silver: 0,
                            bronze: 0,
                            total_matches: 0,
                            wins: 0
                        };
                    }
                    
                    teamStats[lb.team_id].gold += lb.gold || 0;
                    teamStats[lb.team_id].silver += lb.silver || 0;
                    teamStats[lb.team_id].bronze += lb.bronze || 0;
                    teamStats[lb.team_id].total_matches += lb.total_matches || 0;
                    teamStats[lb.team_id].wins += lb.wins || 0;
                });
                
                processedData = Object.values(teamStats).map(team => {
                    team.total_points = (team.gold * 3) + (team.silver * 2) + (team.bronze * 1);
                    team.win_rate = team.total_matches > 0 ? 
                        Math.min(Math.round((team.wins / team.total_matches) * 100), 100) : 0;
                    return team;
                }).sort((a, b) => b.total_points - a.total_points);
            } else {
                processedData = leaderboardData
                    .map(team => {
                        team.total_points = (team.gold * 3) + (team.silver * 2) + (team.bronze * 1);
                        team.win_rate = team.total_matches > 0 ? 
                            Math.min(Math.round((team.wins / team.total_matches) * 100), 100) : 0;
                        return team;
                    })
                    .sort((a, b) => b.total_points - a.total_points);
            }
            
            processedData.forEach((team, index) => {
                const rank = index + 1;
                const medalClass = rank === 1 ? 'gold-medal' : rank === 2 ? 'silver-medal' : rank === 3 ? 'bronze-medal' : '';
                const rankClass = rank <= 3 ? `rank-${rank}` : '';
                const winRateClass = team.win_rate >= 70 ? 'high-win-rate' : 
                                   team.win_rate >= 40 ? 'medium-win-rate' : 'low-win-rate';
                
                tableHtml += `<tr class="${rankClass}">
                    <td>
                        ${rank <= 3 ? `<i class="fas fa-medal medal ${medalClass}"></i>` : ''}
                        ${rank}
                    </td>
                    <td>
                        <div class="team-info">
                            ${team.team_profile ? 
                                `<img src="${team.team_profile}" alt="${team.team_name}" class="team-avatar">` : 
                                `<div class="team-avatar" style="background: #007bff; display: flex; align-items: center; justify-content: center; color: white; font-weight: bold;">
                                    ${team.team_name.charAt(0).toUpperCase()}
                                </div>`
                            }
                            <span class="team-name">${team.team_name}</span>
                        </div>
                    </td>
                    <td>
                        <span class="organization-badge ${team.organization === 'school' ? 'school-badge' : 'barangay-badge'}">
                            ${team.organization === 'school' ? 'School' : 'Barangay'}
                        </span>
                    </td>
                    <td class="stats-number">${team.gold}</td>
                    <td class="stats-number">${team.silver}</td>
                    <td class="stats-number">${team.bronze}</td>
                    <td class="stats-number">${team.total_points}</td>
                    <td>
                        <span class="win-rate ${winRateClass}">
                            ${team.win_rate}%
                        </span>
                    </td>
                </tr>`;
            });
            
            tableHtml += `</tbody></table>`;
            return tableHtml;
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
        }

        window.addEventListener('resize', function() {
            if (window.innerWidth > 767 && isSidebarOpen) {
                toggleNav();
            }
        });
    </script>
