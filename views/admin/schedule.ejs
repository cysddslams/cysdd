                    </div>
                </div>
            </div>
            
            <h4 style="color: #333; margin: 20px 0 15px 0;">Format Recommendations:</h4>
        `;
        
        // Main recommended format
        html += createRecommendationCard(data.recommendation, true);
        
        // Alternative formats
        if (data.alternatives && data.alternatives.length > 0) {
            data.alternatives.forEach(alt => {
                html += createRecommendationCard(alt, false);
            });
        }
        
        // Match comparison table
        html += `
            <div class="match-comparison">
                <h5><i class="fas fa-exchange-alt"></i> Format Comparison</h5>
                <table>
                    <thead>
                        <tr>
                            <th>Format</th>
                            <th>Total Matches</th>
                            <th>Days Needed*</th>
                            <th>Complexity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr style="background: #f0fff4;">
                            <td><strong>${data.recommendation.format.replace('_', ' ').toUpperCase()}</strong></td>
                            <td><strong>${data.recommendation.matches}</strong></td>
                            <td><strong>${Math.ceil(data.recommendation.matches / (data.analysis.dailyCapacity?.maxMatchesPerDay || 8))}</strong></td>
                            <td><strong class="complexity-${data.analysis.complexity?.[data.recommendation.format]?.toLowerCase() || 'medium'}">${data.analysis.complexity?.[data.recommendation.format] || 'Medium'}</strong></td>
                        </tr>
        `;
        
        if (data.alternatives) {
            data.alternatives.forEach(alt => {
                const daysNeeded = Math.ceil(alt.matches / (data.analysis.dailyCapacity?.maxMatchesPerDay || 8));
                html += `
                    <tr>
                        <td>${alt.format.replace('_', ' ').toUpperCase()}</td>
                        <td>${alt.matches}</td>
                        <td>${daysNeeded}</td>
                        <td class="complexity-${data.analysis.complexity?.[alt.format]?.toLowerCase() || 'medium'}">${data.analysis.complexity?.[alt.format] || 'Medium'}</td>
