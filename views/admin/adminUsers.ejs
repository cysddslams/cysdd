<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin/Users - SLAMS</title>
    <link rel="stylesheet" href="/styles/adminHome.css">
    <link rel="stylesheet" href="/styles/adminDashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            background: #f8f9fa;
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .header {
            background: linear-gradient(135deg, #8B0039, #a32600);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 30px;
            width: 100%;
            position: fixed;
            top: 0;
            z-index: 1000;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        }

        .header .logo {
            margin-left: 20px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .header .logo img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            border: 2px solid #fff;
        }

        .slams-title {
            font-size: 22px;
            font-weight: 700;
            color: #FFD700;
            letter-spacing: 0.5px;
        }

        .user-profile {
            position: relative;
            cursor: pointer;
        }

        .user-profile i {
            font-size: 20px;
            color: #fff;
            transition: transform 0.3s ease;
        }

        .user-profile i:hover {
            transform: scale(1.1);
        }

        /* Sidebar Styles */
        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            top: 66px;
            left: -240px;
            background: linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
            z-index: 999;
            padding-top: 20px;
            transition: all 0.3s ease;
            box-shadow: 2px 0px 15px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
        }

        .sidebar a {
            padding: 16px 24px;
            text-decoration: none;
            color: #2e0000;
            font-size: 16px;
            display: block;
            transition: all 0.3s ease;
            border-bottom: 1px solid #eaeaea;
            font-weight: 500;
        }

        .sidebar a i {
            margin-right: 15px;
            width: 20px;
            text-align: center;
            color: #8B0039;
        }

        .sidebar a:hover {
            background: linear-gradient(135deg, #8B0039, #a32600);
            padding-left: 32px;
            color: white;
        }

        .sidebar a:hover i {
            color: white;
        }

        .sidebar a.active {
            background: linear-gradient(135deg, #8B0039, #a32600);
            color: #fff;
            padding-left: 32px;
        }

        .sidebar a.active i {
            color: white;
        }

        .sidebar-btn {
            font-size: 16px;
            color: white;
            background: #8B0039;
            padding: 8px 12px;
            cursor: pointer;
            position: fixed;
            top: 15px;
            left: 15px;
            z-index: 1001;
            border-radius: 6px;
            transition: all 0.3s ease;
            border: none;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .sidebar-btn:hover {
            transform: scale(1.05);
            background: #a32600;
        }

        /* Team dropdown styles */
        .team-dropdown-btn {
            padding: 16px 24px;
            text-decoration: none;
            color: #2e0000;
            font-size: 16px;
            display: block;
            cursor: pointer;
            background-color: #ffffff;
            border-bottom: 1px solid #eaeaea;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .team-dropdown-btn:hover {
            background: linear-gradient(135deg, #8B0039, #a32600);
            padding-left: 32px;
            color: white;
        }

        .team-dropdown-content {
            display: none;
            background-color: #f8f9fa;
            padding-left: 20px;
            border-left: 3px solid #8B0039;
        }

        .team-dropdown-content a {
            padding: 12px 15px;
            text-decoration: none;
            font-size: 14px;
            color: #555;
            display: block;
            border-bottom: 1px solid #eaeaea;
            font-weight: 400;
        }

        .team-dropdown-content a:hover {
            background: linear-gradient(135deg, #8B0039, #a32600);
            color: white;
        }

        .team-dropdown-btn.active+.team-dropdown-content {
            display: block;
        }

        /* Dropdown Content */
        .dropdown-content {
            position: absolute;
            right: 0;
            top: 45px;
            background: #ffffff;
            color: #333;
            min-width: 200px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            border-radius: 8px;
            padding: 10px 0;
            z-index: 104;
            border: 1px solid #e0e0e0;
            opacity: 0;
            pointer-events: none;
            transform: translateY(-10px);
            transition: opacity 0.3s ease, transform 0.3s ease;
        }

        .user-profile:hover .dropdown-content {
            opacity: 1;
            pointer-events: auto;
            transform: translateY(0);
        }

        .dropdown-content a {
            padding: 12px 20px;
            text-decoration: none;
            color: #333;
            display: flex;
            align-items: center;
            font-size: 14px;
            border-bottom: 1px solid #f0f0f0;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .dropdown-content a i {
            margin-right: 10px;
            width: 16px;
            text-align: center;
            color: #8B0039;
        }

        .dropdown-content a:hover {
            background: linear-gradient(135deg, #8B0039, #a32600);
            color: white;
            transform: translateX(5px);
        }

        .dropdown-content a:hover i {
            color: white;
        }

        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 3000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(5px);
            padding: 20px;
            animation: fadeIn 0.3s ease-in-out;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        .modal-content {
            background-color: #fff;
            margin: 0 auto;
            padding: 30px;
            border-radius: 12px;
            width: 90%;
            max-width: 450px;
            text-align: center;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            animation: scaleIn 0.3s ease-in-out;
            position: relative;
        }

        @keyframes scaleIn {
            from { transform: scale(0.9); opacity: 0; }
            to { transform: scale(1); opacity: 1; }
        }

        .modal-content h3 {
            font-size: 22px;
            color: #333;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .modal-content p {
            color: #666;
            margin-bottom: 25px;
            line-height: 1.5;
        }

        .modal-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

        .confirm-btn, .cancel-btn {
            padding: 12px 25px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            border-radius: 8px;
            border: none;
            transition: all 0.3s;
            min-width: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .confirm-btn {
            background: linear-gradient(135deg, #4CAF50, #45a049);
            color: #fff;
            box-shadow: 0 4px 12px rgba(76, 175, 80, 0.3);
        }

        .cancel-btn {
            background: linear-gradient(135deg, #f44336, #e53935);
            color: #fff;
            box-shadow: 0 4px 12px rgba(244, 67, 54, 0.3);
        }

        .confirm-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(76, 175, 80, 0.4);
        }

        .cancel-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(244, 67, 54, 0.4);
        }

        .close-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 24px;
            color: #999;
            background: none;
            border: none;
            cursor: pointer;
            transition: color 0.2s;
        }

        .close-btn:hover {
            color: #333;
        }

        /* ==================== MAIN CONTENT - ENHANCED DESIGN ==================== */
        .dashboard-container {
            padding: 25px;
            padding-top: 90px;
            transition: all 0.3s ease;
            min-height: 100vh;
            margin-left: 0;
            width: 100%;
            background: #f8f9fa;
        }

        /* Search Bar Styles - Enhanced */
        .search-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 20px;
            background: #ffffff;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        }

        .search-container h1 {
            font-size: 28px;
            color: #8B0039;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .search-container h1 i {
            background: rgba(139, 0, 57, 0.1);
            padding: 10px;
            border-radius: 50%;
        }
        
        .search-box {
            position: relative;
            width: 350px;
        }
        
        .search-input {
            width: 100%;
            padding: 12px 20px 12px 45px;
            border: 2px solid #e0e0e0;
            border-radius: 25px;
            font-size: 14px;
            transition: all 0.3s;
            background: #f8f9fa;
            font-weight: 500;
        }
        
        .search-input:focus {
            outline: none;
            border-color: #8B0039;
            box-shadow: 0 0 0 3px rgba(139, 0, 57, 0.1);
            background: #ffffff;
        }
        
        .search-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #8B0039;
        }
        
        /* Player List Styling - Enhanced */
        .player-list {
            width: 100%;
            margin-top: 20px;
        }
        
        .player-list-item {
            display: flex;
            align-items: center;
            padding: 20px 25px;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: all 0.3s ease;
            border-radius: 12px;
            margin-bottom: 8px;
            background: #ffffff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
            border-left: 4px solid transparent;
        }
        
        .player-list-item:hover {
            background: linear-gradient(135deg, #ffffff, #f8f5ff);
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(139, 0, 57, 0.15);
            border-left: 4px solid #8B0039;
        }
        
        .player-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #e0e0e0;
            margin-right: 20px;
            transition: all 0.3s ease;
        }
        
        .player-list-item:hover .player-avatar {
            border-color: #8B0039;
            transform: scale(1.05);
        }
        
        .player-name {
            font-weight: 600;
            flex-grow: 1;
            color: #333;
            transition: color 0.3s;
            font-size: 16px;
        }
        
        .player-list-item:hover .player-name {
            color: #8B0039;
        }
        
        .player-actions {
            display: flex;
            gap: 12px;
        }
        
        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 13px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 6px;
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            color: white;
            box-shadow: 0 3px 8px rgba(231, 76, 60, 0.3);
        }
        
        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 12px rgba(231, 76, 60, 0.4);
        }
        
        /* Player Details Modal - Enhanced */
        .player-modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.6);
            backdrop-filter: blur(5px);
            padding: 20px;
            box-sizing: border-box;
            animation: fadeIn 0.3s ease-out;
        }
        
        .player-modal-content {
            background: #ffffff;
            margin: 0 auto;
            padding: 0;
            border-radius: 16px;
            width: 85%;
            max-width: 800px;
            max-height: 85vh;
            overflow-y: auto;
            box-shadow: 0 20px 40px rgba(0,0,0,0.15);
            border: 1px solid #e0e0e0;
            animation: slideUp 0.3s ease-out;
        }
        
        @keyframes slideUp {
            from { transform: translateY(30px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
        
        .player-modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 25px 30px;
            background: linear-gradient(135deg, #8B0039, #a32600);
            color: white;
            border-radius: 16px 16px 0 0;
        }
        
        .player-modal-header h2 {
            margin: 0;
            font-size: 26px;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .player-modal-body {
            padding: 30px;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
        }
        
        .player-info-group {
            margin-bottom: 20px;
        }
        
        .player-info-label {
            font-weight: 600;
            color: #8B0039;
            margin-bottom: 8px;
            font-size: 14px;
            letter-spacing: 0.5px;
            text-transform: uppercase;
        }
        
        .player-info-value {
            padding: 12px 15px;
            background: #f8f9fa;
            border-radius: 8px;
            border-left: 4px solid #8B0039;
            font-size: 15px;
            color: #333;
            font-weight: 500;
        }
        
        .close-modal {
            color: rgba(255, 255, 255, 0.8);
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            transition: color 0.2s;
        }
        
        .close-modal:hover {
            color: white;
        }
        
        /* Document Links - Enhanced */
        .document-links {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }
        
        .document-link {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 15px;
            background: linear-gradient(135deg, #8B0039, #a32600);
            border-radius: 8px;
            color: white;
            text-decoration: none;
            transition: all 0.3s;
            font-weight: 500;
            box-shadow: 0 3px 8px rgba(139, 0, 57, 0.3);
        }
        
        .document-link:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 12px rgba(139, 0, 57, 0.4);
            color: white;
        }
        
        /* No results message */
        .no-results {
            text-align: center;
            padding: 40px;
            color: #666;
            background: #ffffff;
            border-radius: 12px;
            margin-top: 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
        }

        .no-results i {
            font-size: 48px;
            margin-bottom: 15px;
            color: #e0e0e0;
        }

        .player-modal-profile {
            text-align: center;
            margin-bottom: 25px;
            padding: 20px;
            background: linear-gradient(135deg, #f8f9fa, #ffffff);
            border-radius: 12px;
            grid-column: span 2;
        }

        .player-modal-avatar {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #8B0039;
            margin: 0 auto 15px;
            display: block;
            box-shadow: 0 6px 15px rgba(139, 0, 57, 0.2);
        }

        .student-type-badge {
            display: inline-block;
            padding: 6px 12px;
            background: linear-gradient(135deg, #8B0039, #a32600);
            color: white;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            margin-top: 8px;
        }

        .documents-section {
            grid-column: span 2;
            background: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            border-left: 4px solid #8B0039;
        }

        .documents-section h3 {
            color: #8B0039;
            margin-bottom: 15px;
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        /* Responsive adjustments */
        @media (max-width: 1024px) {
            .header {
                padding: 8px 20px;
            }

            .header .logo img {
                margin-left: 20px;
                width: 45px;
            }

            .sidebar {
                top: 70px;
                width: 200px;
                left: -200px;
            }

            .sidebar a {
                font-size: 15px;
                padding: 14px 20px;
            }

            .dashboard-container {
                padding: 20px;
                padding-top: 85px;
            }

            .sidebar-btn {
                left: 15px;
                top: 15px;
            }

            .search-box {
                width: 300px;
            }
        }

        @media (max-width: 767px) {
            .header {
                padding: 8px 15px;
                height: 60px;
            }

            .logo img {
                width: 80px;
                margin-left: 40px;
            }

            .sidebar {
                top: 60px;
                width: 220px;
                left: -220px;
                padding-top: 10px;
            }

            .sidebar a {
                font-size: 15px;
                padding: 14px 20px;
                min-height: 50px;
            }

            .sidebar a i {
                margin-right: 12px;
                width: 18px;
                text-align: center;
            }

            .sidebar-btn {
                left: 10px;
                top: 13px;
                font-size: 16px;
                padding: 8px 12px;
                min-width: 44px;
                min-height: 44px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .dashboard-container {
                padding: 15px;
                padding-top: 80px;
            }

            .search-container {
                flex-direction: column;
                align-items: flex-start;
                padding: 20px;
            }

            .search-box {
                width: 100%;
            }

            .player-modal-body {
                grid-template-columns: 1fr;
                padding: 20px;
                gap: 15px;
            }
            
            .player-modal-content {
                width: 95%;
                padding: 0;
            }
            
            .player-list-item {
                flex-direction: column;
                align-items: flex-start;
                gap: 12px;
                padding: 15px;
            }
            
            .player-actions {
                width: 100%;
                justify-content: flex-end;
            }
            
            .confirm-btn, .cancel-btn {
                padding: 10px 15px;
                font-size: 14px;
                width: 100px;
            }

            .player-modal-profile {
                grid-column: span 1;
            }

            .documents-section {
                grid-column: span 1;
            }
        }

        @media (max-width: 480px) {
            .player-modal-content {
                width: 95%;
            }
            
            .player-modal-header {
                padding: 20px;
            }
            
            .player-modal-header h2 {
                font-size: 20px;
            }
            
            .player-info-group {
                margin-bottom: 12px;
            }
            
            .player-info-value {
                padding: 10px;
                font-size: 14px;
            }
            
            .document-links {
                flex-direction: column;
                gap: 10px;
            }
            
            .confirm-btn, .cancel-btn {
                padding: 10px 12px;
                font-size: 13px;
                width: 90px;
            }

            .player-modal-body {
                padding: 15px;
            }
        }

        /* Sidebar open state */
        body.sidebar-open {
            overflow: hidden;
        }

        body.sidebar-open .dashboard-container {
            margin-left: 240px;
            width: calc(100% - 240px);
        }

        @media (max-width: 767px) {
            body.sidebar-open .dashboard-container {
                margin-left: 0;
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <!-- Sidebar Menu -->
    <div id="mySidebar" class="sidebar">
        <a href="/admin/home"><i class="fas fa-home"></i> Home</a>
        <a href="/admin/posts"><i class="fas fa-newspaper"></i> Posts</a>
        <a href="/admin/events"><i class="fas fa-calendar-alt"></i> Events</a>
        <a href="/admin/schedule"><i class="fas fa-calendar-day"></i> Schedule</a>
        <a href="/admin/coach"><i class="fas fa-chalkboard-teacher"></i> Organization Request</a>
        
        <!-- Team dropdown section -->
        <a href="javascript:void(0);" class="team-dropdown-btn"><i class="fas fa-users-cog"></i> Teams</a>
        <div class="team-dropdown-content">
            <a href="/admin/team-request"><i class="fas fa-users"></i> Team Request</a>
            <a href="/admin/registered-team"><i class="fas fa-landmark"></i> All Team</a>
        </div>
        <a href="/admin/users" class="active"><i class="fas fa-users"></i> Players</a>
        <a href="/admin/event-history"><i class="fas fa-history"></i> Event History</a>
    </div>

    <!-- Sidebar toggle button -->
    <span class="sidebar-btn" onclick="toggleNav()">&#9776;</span>

    <header class="header" style="display: flex; justify-content: space-between; align-items: center;">
        <div class="logo">
            <a href="/admin/home" style="text-decoration: none;">
                <img src="/images/cityYouth.jpg" alt="SLAMS Logo">
            </a>
            <span class="slams-title">CYSDD</span>
        </div>
        <div style="display: flex; align-items: center; gap: 20px;">
            <!-- Admin Profile -->
            <div class="user-profile" style="position: relative;" id="adminProfileContainer">
                <% if (admin && admin.profilePic) { %>
                    <img src="<%= admin.profilePic %>" 
                        alt="Admin Profile" 
                        style="width: 40px; height: 40px; border-radius: 50%; border: 2px solid #FFD700; object-fit: cover; box-shadow: 0 2px 8px rgba(0,0,0,0.2);">
                <% } else { %>
                    <i class="fas fa-user-shield" style="font-size: 22px; color: white;"></i>
                <% } %>
                <div class="dropdown-content" id="adminDropdownMenu" style="display: none;">
                    <a href="/admin/adminProfile">
                        <i class="fas fa-cogs" style="margin-right: 8px;"></i> Admin Profile
                    </a>
                    <a href="javascript:void(0);" class="logout-btn" onclick="showLogoutModal()">
                        <i class="fas fa-sign-out-alt" style="margin-right: 8px;"></i> Log Out
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main class="dashboard-container">
        <div class="table-container">
            <div class="search-container">
                <h1><i class="fas fa-users"></i> Players Management</h1>
                <div class="search-box">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" id="playerSearch" class="search-input" placeholder="Search players by name..." autocomplete="off">
                </div>
            </div>
            
            <div class="player-list" id="playerListContainer">
                <% users.forEach(function(user) { %>
                    <div class="player-list-item" data-player-name="<%= user.player_name.toLowerCase() %>" onclick="showPlayerModal('<%= user.team_player_id %>')">
                        <div class="player-avatar-container">
                            <% if (user.profile) { %>
                                <img src="<%= user.profile %>" class="player-avatar" alt="Profile">
                            <% } else { %>
                                <div class="player-avatar" style="background: linear-gradient(135deg, #e4e6eb, #d1d3d8); display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-user" style="color: #8B0039; font-size: 18px;"></i>
                                </div>
                            <% } %>
                        </div>
                        <div class="player-name"><%= user.player_name || 'N/A' %></div>
                        <div class="player-actions">
                            <button class="btn btn-danger" onclick="event.stopPropagation(); confirmRemovePlayer('<%= user.team_player_id %>')" title="Remove Player">
                                <i class="fas fa-trash-alt"></i> Remove
                            </button>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div id="noResults" class="no-results" style="display: none;">
                <i class="fas fa-search" style="font-size: 48px; margin-bottom: 15px;"></i>
                <h3 style="color: #666; margin-bottom: 10px;">No Players Found</h3>
                <p style="color: #888;">Try adjusting your search terms</p>
            </div>
        </div>
    </main>

    <!-- Player Details Modal -->
    <div id="playerModal" class="player-modal">
        <div class="player-modal-content">
            <div class="player-modal-header">
                <h2><i class="fas fa-user"></i> Player Details</h2>
                <span class="close-modal" onclick="hidePlayerModal()">&times;</span>
            </div>
            <div class="player-modal-body" id="playerModalBody">
                <!-- Content will be filled by JavaScript -->
            </div>
        </div>
    </div>

    <!-- Modal for logout confirmation -->
    <div id="logoutModal" class="modal">
        <div class="modal-content">
            <button class="close-btn" onclick="hideLogoutModal()">&times;</button>
            <h3>Confirm Logout</h3>
            <p>Are you sure you want to log out?</p>
            <div class="modal-buttons">
                <button id="confirmLogout" class="confirm-btn">Confirm</button>
                <button id="cancelLogout" class="cancel-btn">Cancel</button>
            </div>
        </div>
    </div>

    <!-- Modal for remove player confirmation -->
    <div id="removePlayerModal" class="modal">
        <div class="modal-content">
            <button class="close-btn" onclick="hideRemovePlayerModal()">&times;</button>
            <h3>Remove Player</h3>
            <p>Are you sure you want to remove this player? This action cannot be undone.</p>
            <div class="modal-buttons">
                <button id="confirmRemove" class="confirm-btn">Yes, Remove</button>
                <button id="cancelRemove" class="cancel-btn">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        let isSidebarOpen = false;
        let playerToRemove = null;
        const allPlayers = Array.from(document.querySelectorAll('.player-list-item'));

        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            const content = document.querySelector(".dashboard-container");
            const sidebarBtn = document.querySelector(".sidebar-btn");

            if (isSidebarOpen) {
                sidebar.style.left = "-240px";  
                content.style.marginLeft = "0"; 
                sidebarBtn.innerHTML = "&#9776;"; 
            } else {
                sidebar.style.left = "0";  
                content.style.marginLeft = "240px";  
                sidebarBtn.innerHTML = "&#9776;"; 
            }
            isSidebarOpen = !isSidebarOpen;  
        }

        // Toggle the team dropdown
        const teamDropdownBtn = document.querySelector('.team-dropdown-btn');
        const teamDropdownContent = document.querySelector('.team-dropdown-content');

        teamDropdownBtn.addEventListener('click', function() {
            teamDropdownBtn.classList.toggle('active');
            teamDropdownContent.style.display = teamDropdownContent.style.display === "block" ? "none" : "block";
        });

        // Search functionality
        document.getElementById('playerSearch').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            let hasResults = false;
            
            allPlayers.forEach(player => {
                const playerName = player.getAttribute('data-player-name');
                if (playerName.includes(searchTerm)) {
                    player.style.display = 'flex';
                    hasResults = true;
                } else {
                    player.style.display = 'none';
                }
            });
            
            document.getElementById('noResults').style.display = hasResults ? 'none' : 'block';
        });

        // Modal functions
        function showLogoutModal() {
            document.getElementById('logoutModal').style.display = 'block';
        }

        function hideLogoutModal() {
            document.getElementById('logoutModal').style.display = 'none';
        }

        function showRemovePlayerModal() {
            document.getElementById('removePlayerModal').style.display = 'block';
        }

        function hideRemovePlayerModal() {
            document.getElementById('removePlayerModal').style.display = 'none';
        }

        // Player removal functions
        function confirmRemovePlayer(playerId) {
            event.stopPropagation();
            playerToRemove = playerId;
            showRemovePlayerModal();
        }

        async function removePlayer() {
            if (!playerToRemove) return;
            
            try {
                const response = await fetch(`/admin/users/remove/${playerToRemove}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                });
                
                const result = await response.json();
                
                if (result.success) {
                    window.location.reload();
                } else {
                    alert(result.message || 'Failed to remove player');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while removing the player');
            } finally {
                hideRemovePlayerModal();
            }
        }

        // Player modal functions
        function showPlayerModal(playerId) {
            const player = usersData.find(p => p.team_player_id == playerId);
            if (!player) return;
            
            const modalBody = document.getElementById('playerModalBody');
            
            // Determine student type and required documents
            const studentType = player.student_type || 'regular';
            const requiredDocuments = getRequiredDocuments(studentType);
            
            modalBody.innerHTML = `
                <div class="player-modal-profile">
                    ${player.profile ? 
                        `<img src="${player.profile}" class="player-modal-avatar" alt="Profile">` : 
                        `<div class="player-modal-avatar" style="background: linear-gradient(135deg, #e4e6eb, #d1d3d8); display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-user" style="color: #8B0039; font-size: 32px;"></i>
                        </div>`
                    }
                    <h3 style="margin-top: 10px; color: #8B0039;">${player.player_name || 'N/A'}</h3>
                    <div class="student-type-badge">${studentType.charAt(0).toUpperCase() + studentType.slice(1)} Student</div>
                </div>
                <div class="player-info-group">
                    <div class="player-info-label">Email</div>
                    <div class="player-info-value">${player.email || 'N/A'}</div>
                </div>
                <div class="player-info-group">
                    <div class="player-info-label">Sports</div>
                    <div class="player-info-value">${player.sports || 'N/A'}</div>
                </div>
                <div class="player-info-group">
                    <div class="player-info-label">Age</div>
                    <div class="player-info-value">${player.age || 'N/A'}</div>
                </div>
                <div class="player-info-group">
                    <div class="player-info-label">Gender</div>
                    <div class="player-info-value">${player.sex || 'N/A'}</div>
                </div>
                <div class="player-info-group">
                    <div class="player-info-label">Birthdate</div>
                    <div class="player-info-value">${player.birthdate || 'N/A'}</div>
                </div>
                <div class="player-info-group">
                    <div class="player-info-label">Contact Number</div>
                    <div class="player-info-value">${player.contact_number || 'N/A'}</div>
                </div>
                <div class="player-info-group">
                    <div class="player-info-label">Team</div>
                    <div class="player-info-value">${player.teamName || 'N/A'}</div>
                </div>
                <div class="player-info-group">
                    <div class="player-info-label">Event</div>
                    <div class="player-info-value">${player.event_title || 'N/A'}</div>
                </div>
                <div class="player-info-group">
                    <div class="player-info-label">Date Registered</div>
                    <div class="player-info-value">${player.created_at || 'N/A'}</div>
                </div>
                <div class="documents-section">
                    <h3><i class="fas fa-file-alt"></i> Required Documents (${studentType} student)</h3>
                    <div class="document-links">
                        ${requiredDocuments.map(doc => {
                            const docUrl = player[doc.key];
                            const docName = doc.name;
                            const docIcon = doc.icon;
                            
                            if (docUrl) {
                                return `<a href="${docUrl}" target="_blank" class="document-link">
                                    <i class="${docIcon}"></i> ${docName}
                                </a>`;
                            } else {
                                return `<span class="document-link" style="background: #e0e0e0; cursor: not-allowed; opacity: 0.6;">
                                    <i class="${docIcon}"></i> ${docName} (Missing)
                                </span>`;
                            }
                        }).join('')}
                    </div>
                </div>
            `;
            
            document.getElementById('playerModal').style.display = 'block';
        }
        
        // Function to determine required documents based on student type
        function getRequiredDocuments(studentType) {
            const baseDocuments = [
                { key: 'PSA', name: 'PSA Document', icon: 'fas fa-id-card' },
                { key: 'waiver', name: 'Waiver Form', icon: 'fas fa-file-signature' },
                { key: 'med_cert', name: 'Medical Certificate', icon: 'fas fa-file-medical' }
            ];
            
            // Add additional documents based on student type
            if (studentType === 'college') {
                baseDocuments.push(
                    { key: 'school_id', name: 'College ID', icon: 'fas fa-id-badge' },
                    { key: 'registration_form', name: 'Registration Form', icon: 'fas fa-file-contract' }
                );
            } else if (studentType === 'high_school') {
                baseDocuments.push(
                    { key: 'school_id', name: 'School ID', icon: 'fas fa-id-badge' },
                    { key: 'parent_consent', name: 'Parent Consent', icon: 'fas fa-user-friends' }
                );
            } else if (studentType === 'elementary') {
                baseDocuments.push(
                    { key: 'birth_certificate', name: 'Birth Certificate', icon: 'fas fa-certificate' },
                    { key: 'parent_consent', name: 'Parent Consent', icon: 'fas fa-user-friends' }
                );
            }
            
            return baseDocuments;
        }
        
        function hidePlayerModal() {
            document.getElementById('playerModal').style.display = 'none';
        }
        
        // Store users data for JavaScript access
        const usersData = <%- JSON.stringify(users) %>;
        
        // Close modals when clicking outside
        window.addEventListener('click', function(event) {
            if (event.target.className === 'modal') {
                hideLogoutModal();
                hideRemovePlayerModal();
                hidePlayerModal();
            }
        });

        // Event listeners
        document.getElementById('confirmLogout').addEventListener('click', function() {
            window.location.href = '/admin/logout';  
        });

        document.getElementById('cancelLogout').addEventListener('click', hideLogoutModal);

        document.getElementById('confirmRemove').addEventListener('click', removePlayer);

        document.getElementById('cancelRemove').addEventListener('click', hideRemovePlayerModal);
    </script>
</body>
</html>
