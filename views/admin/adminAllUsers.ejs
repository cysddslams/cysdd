<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users - SLAMS</title>
    <link rel="stylesheet" href="/styles/adminHome.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            color: #fff;
            background: linear-gradient(135deg, #ffffff, #c6d6d8);
            line-height: 1.6;
            color: #fff;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .container {
            max-width: 1200px;
            padding: 0 20px;
            margin: 0 auto;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            align-items: center;
        }

        .header {
            background-color: #8B0039;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 3px 30px;
            width: 100%;
            position: relative;
            z-index: 100;
        }

        .header .logo {
            margin-left: 20px;
            display: flex;
            align-items: center;
            font-family: 'Playfair Display', serif;
            gap: 12px;
        }

        .header .logo img {
            width: 60px;
            height: auto;
            border-radius: 50%;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .nav {
            display: flex;
            gap: 15px;
            justify-content: flex-end;
        }

        .slams-title {
            font-size: 24px;
            font-weight: bold;
            font-family: 'Poppins', sans-serif;
            color: #FFD700;
            letter-spacing: 1px;
        }

        .nav a {
            text-decoration: none;
            font-weight: bold;
            color: #fff;
            padding: 8px 16px;
            border-radius: 20px;
            transition: background-color 0.3s ease-in-out;
        }

        .nav .login-btn:hover {
            background-color: #FFD700;
            color: #8B0039;
        }

        .user-profile i {
            font-size: 20px;
            color: #fff;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

        .user-profile i:hover {
            transform: scale(1.1);
        }

        /* Sidebar Styles */
        .sidebar {
            height: 100%;
            width: 240px;
            position: fixed;
            top: 72px;
            left: -240px;
            background-color: #ffffff;
            z-index: 999;
            padding-top: 20px;
            transition: all 0.3s ease;
            box-shadow: 2px 0px 10px rgba(0, 0, 0, 0.2);
            overflow-y: auto;
        }

        .sidebar a {
            padding: 16px 24px;
            text-decoration: none;
            color: rgb(46, 0, 0);
            font-size: 18px;
            display: block;
            transition: all 0.3s ease;
            border-bottom: 1px solid #000000;
        }

        .sidebar a i {
            margin-right: 15px;
        }

        .sidebar a:hover {
            background-color: #a32600;
            padding-left: 32px;
            color: white;
        }

        .sidebar a.active {
            background-color: #581000;
            color: #fff;
            padding-left: 32px;
        }

        .sidebar-btn {
            font-size: 15px;
            color: white;
            background-color: #8B0039;
            padding: 5px;
            padding-left: 10px;
            padding-right: 10px;
            cursor: pointer;
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1001;
            border-radius: 5px;
            transition: transform 0.3s ease;
        }

        .sidebar-btn:hover {
            transform: scale(1.1);
            background-color: #8B0039;
        }

        /* Team dropdown styles */
        .team-dropdown-btn {
            padding: 16px 24px;
            text-decoration: none;
            color: rgb(46, 0, 0);
            font-size: 18px;
            display: block;
            cursor: pointer;
            background-color: #ffffff;
            border-bottom: 1px solid #000000;
            transition: all 0.3s ease;
        }

        .team-dropdown-btn:hover {
            background-color: #a32600;
            padding-left: 32px;
            color: white;
        }

        .team-dropdown-content {
            display: none;
            background-color: #f4f4f4;
            padding-left: 20px;
            border-left: 3px solid #3498db;
        }

        .team-dropdown-content a {
            padding: 8px 15px;
            text-decoration: none;
            font-size: 16px;
            color: #333;
            display: block;
            border-bottom: 1px solid #000000;
        }

        .team-dropdown-content a:hover {
            background-color: #a32600;
            color: white;
        }

        .team-dropdown-btn.active+.team-dropdown-content {
            display: block;
        }

        /* Dashboard Container */
        .dashboard-container {
            padding: 40px;
            padding-top: 90px;
            transition: padding-left 0.3s ease;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            min-height: 100vh;
            width: 100%;
        }

        /* Page Header */
        .page-header {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: linear-gradient(135deg, #8B0039, #a32600);
            border-radius: 16px;
            color: white;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .page-header h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            font-weight: 700;
        }

        .page-header p {
            font-size: 1.1rem;
            opacity: 0.9;
        }

        /* Users Section */
        .users-section {
            background: #fff;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 40px;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 25px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .section-header h2 {
            font-size: 24px;
            color: #333;
            margin: 0;
        }

        .users-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: #f8f9fa;
            border-radius: 12px;
            padding: 20px;
            text-align: center;
            border-left: 4px solid #8B0039;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: bold;
            color: #8B0039;
            margin-bottom: 5px;
        }

        .stat-label {
            font-size: 0.9rem;
            color: #666;
            font-weight: 500;
        }

        /* Users Grid */
        .users-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 25px;
        }

        .user-card {
            background: #fff;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            border: 1px solid #e0e0e0;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .user-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            border-color: #8B0039;
        }

        .user-avatar {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #8B0039;
            flex-shrink: 0;
        }

        .avatar-placeholder {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: linear-gradient(135deg, #8B0039, #a32600);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            border: 3px solid #8B0039;
            flex-shrink: 0;
        }

        .user-info {
            flex: 1;
        }

        .user-email {
            font-size: 1.1rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            word-break: break-all;
        }

        .user-meta {
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.85rem;
            color: #666;
        }

        .meta-item i {
            width: 16px;
            color: #8B0039;
        }

        .terms-badge {
            display: inline-block;
            padding: 4px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            margin-top: 5px;
        }

        .terms-accepted {
            background: #d4edda;
            color: #155724;
        }

        .terms-pending {
            background: #fff3cd;
            color: #856404;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4rem;
            color: #ddd;
            margin-bottom: 20px;
        }

        .empty-state h3 {
            color: #999;
            margin-bottom: 10px;
        }

        /* Search and Filter */
        .search-filter {
            display: flex;
            gap: 15px;
            margin-bottom: 25px;
            flex-wrap: wrap;
        }

        .search-box {
            flex: 1;
            min-width: 250px;
            position: relative;
        }

        .search-box input {
            width: 100%;
            padding: 12px 45px 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .search-box input:focus {
            outline: none;
            border-color: #8B0039;
            box-shadow: 0 0 0 3px rgba(139, 0, 57, 0.1);
        }

        .search-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
        }

        .filter-select {
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 14px;
            background: white;
            min-width: 150px;
            cursor: pointer;
        }

        .filter-select:focus {
            outline: none;
            border-color: #8B0039;
        }

        /* Dropdown Content - Fixed for desktop */
        .dropdown-content {
            position: absolute;
            right: 0;
            top: 50px;
            background-color: #621616;
            color: #fff;
            min-width: 180px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.5);
            border-radius: 0;
            padding: 15px;
            z-index: 104;
            border: 1px solid #ffcc00;
            display: none;
        }

        .dropdown-content.show {
            display: block;
        }

        .dropdown-content a {
            padding: 10px 15px;
            text-decoration: none;
            color: #fff;
            display: flex;
            align-items: center;
            font-size: 14px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .dropdown-content a i {
            margin-right: 10px;
            width: 16px;
            text-align: center;
        }

        .dropdown-content a:hover {
            background-color: #9a1b1b;
            transform: translateX(5px);
        }

        .logout-btn {
            background-color: rgb(236, 26, 26);
            padding: 5px 15px;
            margin-left: 5px;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            margin-top: 8px;
            transition: background-color 0.3s ease;
        }

        .logout-btn:hover {
            background-color: #E64A19;
        }

        /* Notification Dropdown */
        .notification-wrapper {
            position: relative;
            display: inline-block;
            margin-right: 20px;
        }

        #notificationDropdown {
            display: none;
            position: absolute;
            right: 0;
            top: 40px;
            background: #fff;
            width: 320px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            z-index: 1000;
            overflow: hidden;
        }

        .notification-wrapper:hover #notificationDropdown,
        #notificationDropdown.show {
            display: block;
        }

        #notificationDropdown div {
            padding: 15px;
        }

        #notificationDropdown h4 {
            margin: 0 0 10px 0;
            font-size: 16px;
            border-bottom: 1px solid #eee;
            padding-bottom: 8px;
            color: #333;
        }

        #notificationDropdown a {
            color: #141010;
            text-decoration: none;
            font-size: 14px;
            display: block;
            padding: 8px 0;
            border-bottom: 1px solid #eee;
            transition: background-color 0.2s;
        }

        #notificationDropdown a:hover {
            background-color: #f5f5f5;
        }

        /* Success Message */
        .success-box {
            max-width: 500px;
            margin: 20px auto;
            padding: 15px 20px;
            background-color: #4CAF50;
            color: #fff;
            border-radius: 8px;
            font-weight: 500;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: opacity 0.5s ease;
            animation: slideFade 0.4s ease-out;
        }

        @keyframes slideFade {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Improved Logout Modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 3000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            padding-top: 100px;
            animation: fadeIn 0.3s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .modal-content {
            background-color: #fff;
            margin: 0 auto;
            padding: 30px;
            border-radius: 10px;
            width: 90%;
            max-width: 400px;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
            animation: scaleIn 0.3s ease-in-out;
            position: relative;
        }

        @keyframes scaleIn {
            from {
                transform: scale(0.9);
            }

            to {
                transform: scale(1);
            }
        }

        .modal-content h3 {
            font-size: 22px;
            color: #333;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .modal-buttons {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-top: 20px;
        }

        .confirm-btn,
        .cancel-btn {
            padding: 12px 25px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            border-radius: 6px;
            border: none;
            transition: all 0.3s;
            min-width: 100px;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

        .confirm-btn {
            background-color: #4CAF50;
            color: #fff;
        }

        .cancel-btn {
            background-color: #f44336;
            color: #fff;
        }

        .confirm-btn:hover {
            background-color: #45a049;
            transform: translateY(-2px);
        }

        .cancel-btn:hover {
            background-color: #e53935;
            transform: translateY(-2px);
        }

        .close-btn {
            position: absolute;
            top: 15px;
            right: 15px;
            font-size: 24px;
            color: #999;
            background: none;
            border: none;
            cursor: pointer;
        }

        .close-btn:hover {
            color: #333;
        }

        /* Responsive Design */
        @media (max-width: 1024px) {
            .container {
                padding: 0 15px;
            }

            .header {
                padding: 2px 20px;
            }

            .header .logo img {
                margin-left: 20px;
                width: 45px;
            }

            .header .slams-title {
                font-size: 18px;
            }

            .nav a {
                padding: 7px 14px;
                font-size: 14px;
            }

            .sidebar {
                top: 70px;
                width: 200px;
                left: -200px;
            }

            .sidebar a {
                font-size: 16px;
                padding: 14px 20px;
            }

            .dashboard-container {
                padding: 15px;
                padding-top: 80px;
            }

            .sidebar-btn {
                left: 15px;
                top: 15px;
            }

            .users-grid {
                grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
                gap: 20px;
            }
        }

        @media (max-width: 767px) {
            .header {
                padding: 8px 15px;
                height: 60px;
            }

            .logo img {
                width: 80px;
                margin-left: 40px;
            }

            .sidebar {
                top: 60px;
                width: 220px;
                left: -220px;
                padding-top: 10px;
            }

            .sidebar a {
                font-size: 16px;
                padding: 16px 20px;
                min-height: 50px;
            }

            .sidebar a i {
                margin-right: 12px;
                width: 20px;
                text-align: center;
            }

            .sidebar-btn {
                left: 10px;
                top: 13px;
                font-size: 18px;
                padding: 8px 12px;
                min-width: 44px;
                min-height: 44px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

            .dashboard-container {
                padding: 20px;
                padding-top: 80px;
            }

            .users-section {
                padding: 20px;
            }

            .users-grid {
                grid-template-columns: 1fr;
                gap: 15px;
            }

            .search-filter {
                flex-direction: column;
            }

            .search-box {
                min-width: 100%;
            }

            .section-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .user-card {
                padding: 20px;
            }

            .user-avatar,
            .avatar-placeholder {
                width: 60px;
                height: 60px;
            }
        }

        @media (max-width: 400px) {
            .logo img {
                width: 70px;
                margin-left: 35px;
            }

            .sidebar {
                width: 200px;
            }

            .sidebar a {
                font-size: 15px;
                padding: 14px 15px;
            }

            .user-card {
                flex-direction: column;
                text-align: center;
                gap: 15px;
            }

            .user-info {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar Menu -->
    <div id="mySidebar" class="sidebar">
        <a href="/admin/home"><i class="fas fa-home"></i> Home</a>
        <a href="/admin/posts"><i class="fas fa-newspaper"></i> Posts</a>
        <a href="/admin/events"><i class="fas fa-calendar-alt"></i> Events</a>
        <a href="/admin/schedule"><i class="fas fa-calendar-day"></i> Schedule</a>
        <a href="/admin/coach"><i class="fas fa-chalkboard-teacher"></i> Coordinator Request</a>
        <!-- Team dropdown section -->
        <a href="javascript:void(0);" class="team-dropdown-btn"><i class="fas fa-users-cog"></i> Teams</a>
        <div class="team-dropdown-content">
            <a href="/admin/team-request"><i class="fas fa-users"></i> Team Request</a>
            <a href="/admin/registered-team"><i class="fas fa-landmark"></i> All Team</a>
        </div>
        <a href="/admin/users"><i class="fas fa-users"></i> Players</a>
        <a href="/admin/all-users" class="active"><i class="fas fa-user-friends"></i> Users</a>
        <a href="/admin/event-history"><i class="fas fa-history"></i> Event History</a>
    </div>
    <!-- Sidebar toggle button -->
    <span class="sidebar-btn" onclick="toggleNav()">&#9776;</span>
    
    <header class="header" style="display: flex; justify-content: space-between; align-items: center;">
        <div class="logo">
            <a href="/admin/home" style="text-decoration: none;">
                <img src="/images/cityYouth.jpg" alt="SLAMS Logo">
            </a>
            <span class="slams-title">CYSDD</span>
        </div>
        <!-- Container for bell and user profile -->
        <div style="display: flex; align-items: center; gap: 20px;">
            <!-- Notification Bell -->
            <div style="position: relative;">
                <a href="javascript:void(0);" onclick="toggleNotificationForm()" style="color: white; position: relative;">
                    <i class="fas fa-bell" style="font-size: 22px;"></i>
                    <% if ((newCoachRequests && newCoachRequests.length > 0) || (newTeamRequests && newTeamRequests.length > 0)) { %>
                        <span style="position: absolute; top: -4px; right: -6px; width: 8px; height: 8px; background-color: red; border-radius: 50%; display: inline-block;"></span>
                    <% } %>
                </a>
                
            </div>
            <!-- Admin Profile -->
            <div class="user-profile" style="position: relative;" id="adminProfileContainer">
                <% if (admin && admin.profilePic) { %>
                    <img src="<%= admin.profilePic %>" 
                        alt="Admin Profile" 
                        style="width: 35px; height: 35px; border-radius: 50%; border: 2px solid #007bff; object-fit: cover; cursor: pointer;">
                <% } else { %>
                    <i class="fas fa-user-shield" style="font-size: 22px; color: white; cursor: pointer;"></i>
                <% } %>
                <div class="dropdown-content" id="adminDropdownMenu" style="display: none;">
                    <a href="/admin/adminProfile">
                        <i class="fas fa-cogs" style="margin-right: 8px;"></i> Admin
                    </a>
                    <a href="javascript:void(0);" class="logout-btn" onclick="showLogoutModal()">
                        <i class="fas fa-sign-out-alt" style="margin-right: 8px;"></i> Log Out
                    </a>
                </div>
            </div>
        </div>
    </header>
    
    <!-- Notification Dropdown Box -->
    <div id="notificationDropdown" style="display: none; position: absolute; right: 0; top: 30px; background: #fff; width: 320px; box-shadow: 0 5px 15px rgba(0,0,0,0.2); border-radius: 8px; z-index: 1000; overflow: hidden;">
        <div style="padding: 15px;">
            <h4 style="margin: 0 0 10px 0; font-size: 16px; border-bottom: 1px solid #eee; padding-bottom: 8px;">Notifications</h4>
            <% if ((newCoachRequests && newCoachRequests.length > 0) || (newTeamRequests && newTeamRequests.length > 0)) { %>
                <% newCoachRequests.forEach((coach, index) => { %>
                    <div style="padding: 8px 0; border-bottom: 1px solid #eee;">
                        <a href="/admin/coach" style="color: #141010; text-decoration: none; font-size: 14px; display: block;">
                                            ðŸ”” New Coordinator Account Request from <strong><%= coach.fullname %></strong>
                        </a>
                    </div>
                <% }); %>
                <% newTeamRequests.forEach((team, index) => { %>
                    <div style="padding: 8px 0; border-bottom: 1px solid #eee;">
                        <a href="/admin/team-request" style="color: #141010; text-decoration: none; font-size: 14px; display: block;">
                                            âš½ New Team Request: <strong><%= team.teamName %></strong>
                        </a>
                    </div>
                <% }); %>
            <% } else { %>
                <p style="font-size: 14px; color: #999; margin: 10px 0;">No new notifications.</p>
            <% } %>
        </div>
    </div>
                
    <main class="dashboard-container">
        <% if (success) { %>
            <div class="alert alert-success success-box">
                <%= success %>
            </div>
        <% } %>
        
        <!-- Page Header -->
        <div class="page-header">
            <h1><i class="fas fa-user-friends"></i> All Users</h1>
            <p>Manage and view all registered users in the system</p>
        </div>

        <!-- Users Section -->
        <section class="users-section">
            <div class="section-header">
                <h2>Registered Users</h2>
                <div class="search-filter">
                    <div class="search-box">
                        <input type="text" id="searchUsers" placeholder="Search users by email...">
                        <i class="fas fa-search search-icon"></i>
                    </div>
                    <select class="filter-select" id="termsFilter">
                        <option value="all">All Users</option>
                        <option value="accepted">Terms Accepted</option>
                        <option value="pending">Terms Pending</option>
                    </select>
                </div>
            </div>

            <!-- Users Statistics -->
            <div class="users-stats">
                <div class="stat-card">
                    <div class="stat-number"><%= totalUsers %></div>
                    <div class="stat-label">Total Users</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= termsAcceptedUsers %></div>
                    <div class="stat-label">Terms Accepted</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= termsPendingUsers %></div>
                    <div class="stat-label">Terms Pending</div>
                </div>
                <div class="stat-card">
                    <div class="stat-number"><%= googleUsers %></div>
                    <div class="stat-label">Google Sign-in</div>
                </div>
            </div>

            <!-- Users Grid -->
            <% if (users && users.length > 0) { %>
                <div class="users-grid" id="usersGrid">
                    <% users.forEach(user => { %>
                        <div class="user-card" data-email="<%= user.email.toLowerCase() %>" data-terms="<%= user.terms_accepted ? 'accepted' : 'pending' %>">
                            <% if (user.profile) { %>
                                <img src="<%= user.profile %>" class="user-avatar" alt="Profile">
                            <% } else { %>
                                <div class="avatar-placeholder">
                                    <i class="fas fa-user"></i>
                                </div>
                            <% } %>
                            <div class="user-info">
                                <div class="user-email"><%= user.email %></div>
                                <div class="user-meta">
                                    <div class="meta-item">
                                        <i class="fas fa-calendar"></i>
                                        Joined: <%= new Date(user.created_at).toLocaleDateString('en-US', { 
                                            year: 'numeric', 
                                            month: 'short', 
                                            day: 'numeric' 
                                        }) %>
                                    </div>
                                    <% if (user.google_id) { %>
                                        <div class="meta-item">
                                            <i class="fab fa-google"></i>
                                            Google Sign-in
                                        </div>
                                    <% } %>
                                    <div class="meta-item">
                                        <i class="fas fa-file-signature"></i>
                                        <% if (user.terms_accepted) { %>
                                            <span class="terms-badge terms-accepted">
                                                <i class="fas fa-check-circle"></i> Terms Accepted
                                            </span>
                                        <% } else { %>
                                            <span class="terms-badge terms-pending">
                                                <i class="fas fa-clock"></i> Terms Pending
                                            </span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="empty-state">
                    <i class="fas fa-user-friends"></i>
                    <h3>No Users Found</h3>
                    <p>There are no registered users in the system yet.</p>
                </div>
            <% } %>
        </section>
    </main>

    <!-- Modal for logout confirmation -->
    <div id="logoutModal" class="modal">
        <div class="modal-content">
            <button class="close-btn" onclick="hideLogoutModal()">&times;</button>
            <h3>Are you sure you want to log out?</h3>
            <div class="modal-buttons">
                <button id="confirmLogout" class="confirm-btn">Confirm</button>
                <button id="cancelLogout" class="cancel-btn">Cancel</button>
            </div>
        </div>
    </div>
    
    <script>
        let isSidebarOpen = false;

        function toggleNav() {
            const sidebar = document.getElementById("mySidebar");
            const content = document.querySelector(".dashboard-container");
            const sidebarBtn = document.querySelector(".sidebar-btn");

            if (isSidebarOpen) {
                sidebar.style.left = "-240px";  
                content.style.marginLeft = "0"; 
                sidebarBtn.innerHTML = "&#9776;"; 
            } else {
                sidebar.style.left = "0";  
                content.style.marginLeft = "0";  
                sidebarBtn.innerHTML = "&#9776;"; 
            }
            isSidebarOpen = !isSidebarOpen;  
        }
        
        // Toggle the team dropdown
        const teamDropdownBtn = document.querySelector('.team-dropdown-btn');
        const teamDropdownContent = document.querySelector('.team-dropdown-content');
        teamDropdownBtn.addEventListener('click', function() {
            teamDropdownBtn.classList.toggle('active');
            if (teamDropdownContent.style.display === "block") {
                teamDropdownContent.style.display = "none";
            } else {
                teamDropdownContent.style.display = "block";
            }
        });
        
        // Show the logout confirmation modal
        function showLogoutModal() {
            document.getElementById('logoutModal').style.display = 'block';
        }
        
        function hideLogoutModal() {
            document.getElementById('logoutModal').style.display = 'none';
        }
        
        document.getElementById('confirmLogout').addEventListener('click', function() {
            window.location.href = '/admin/logout';  
        });
        
        document.getElementById('cancelLogout').addEventListener('click', function() {
            hideLogoutModal(); 
        });
        
        //Success message 
        window.addEventListener("DOMContentLoaded", () => {
            const successAlert = document.querySelector(".alert-success");
            if (successAlert) {
                setTimeout(() => {
                    successAlert.style.transition = "opacity 0.5s ease";
                    successAlert.style.opacity = "0";
                    setTimeout(() => successAlert.remove(), 500);
                }, 1000);
            }
        });
        
        //Notification toggle
        function toggleNotificationForm() {
            const dropdown = document.getElementById('notificationDropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }
        
        function closeNotificationForm() {
            const dropdown = document.getElementById('notificationDropdown');
            dropdown.style.display = 'none';
        }
        
        window.addEventListener('click', function(event) {
            const dropdown = document.getElementById('notificationDropdown');
            const bell = document.querySelector('.fa-bell');
            
            // Close notification dropdown if clicked outside
            if (dropdown && !dropdown.contains(event.target) && !bell.contains(event.target)) {
                dropdown.style.display = 'none';
            }
            
            // Close admin dropdown if clicked outside
            const adminProfileContainer = document.getElementById('adminProfileContainer');
            const adminDropdownMenu = document.getElementById('adminDropdownMenu');
            
            if (adminProfileContainer && adminDropdownMenu && 
                !adminProfileContainer.contains(event.target) && 
                adminDropdownMenu.style.display === 'block') {
                adminDropdownMenu.style.display = 'none';
            }
        });
        
        //admin profile dropdown - Fixed for desktop
        document.addEventListener('DOMContentLoaded', () => {
            const profileContainer = document.getElementById('adminProfileContainer');
            const dropdownMenu = document.getElementById('adminDropdownMenu');
            
            profileContainer.addEventListener('click', function(e) {
                e.stopPropagation();
                // Toggle dropdown display
                if (dropdownMenu.style.display === 'block') {
                    dropdownMenu.style.display = 'none';
                } else {
                    dropdownMenu.style.display = 'block';
                }
            });
        });

        // Users Search and Filter Functionality
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchUsers');
            const termsFilter = document.getElementById('termsFilter');
            const userCards = document.querySelectorAll('.user-card');

            function filterUsers() {
                const searchTerm = searchInput.value.toLowerCase();
                const filterValue = termsFilter.value;

                userCards.forEach(card => {
                    const email = card.getAttribute('data-email');
                    const terms = card.getAttribute('data-terms');
                    
                    const matchesSearch = email.includes(searchTerm);
                    const matchesFilter = filterValue === 'all' || terms === filterValue;
                    
                    if (matchesSearch && matchesFilter) {
                        card.style.display = 'flex';
                    } else {
                        card.style.display = 'none';
                    }
                });
            }

            searchInput.addEventListener('input', filterUsers);
            termsFilter.addEventListener('change', filterUsers);
        });
    </script>
</body>
</html>
